# ===========================================
# Uncle Joes Golf - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your actual values

# ===========================================
# SUPABASE CONFIGURATION (Production)
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# AUTH0 CONFIGURATION (Production)
# ===========================================
# Get these from: https://manage.auth0.com/dashboard/
AUTH0_SECRET=your_auth0_secret_here
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com
AUTH0_BASE_URL=https://unclejoesgolf.com
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_CLIENT_SECRET=your_auth0_client_secret_here

# ===========================================
# STRIPE CONFIGURATION (Production)
# ===========================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Stripe Price IDs (Create these in Stripe Dashboard)
NEXT_PUBLIC_STRIPE_PRICE_FAN_CLUB=price_your_fan_club_price_id
NEXT_PUBLIC_STRIPE_PRICE_MERCH=price_your_merch_price_id

# ===========================================
# RESEND EMAIL CONFIGURATION (Production)
# ===========================================
# Get this from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Email addresses
CONTACT_EMAIL=contact@unclejoesgolf.com
ADMIN_EMAIL=admin@unclejoesgolf.com
NEWSLETTER_FROM=noreply@unclejoesgolf.com

# ===========================================
# GOOGLE ANALYTICS (Production)
# ===========================================
# Get this from: https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===========================================
# SENTRY ERROR TRACKING (Production)
# ===========================================
# Get this from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn_here

# ===========================================
# OPENAI CONFIGURATION (AI Coach & Chief of Staff)
# ===========================================
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# ELEVENLABS CONFIGURATION (Voice AI)
# ===========================================
# Get these from: https://elevenlabs.io/app/profile
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_uncle_joe_voice_id_here
NEXT_PUBLIC_CONVAI_AGENT_ID=your_elevenlabs_convai_agent_id_here

# ===========================================
# SITE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SITE_URL=https://unclejoesgolf.com
NEXT_PUBLIC_SITE_NAME="Uncle Joes Golf"
NEXT_PUBLIC_SITE_DESCRIPTION="Experience the raw athleticism and spiritual symbolism of Uncle Joe Sanders. PGA Tour journey, tournament highlights, exclusive fan content, and Stones Golf integration."

# ===========================================
# SECURITY & PERFORMANCE
# ===========================================
# Generate a secure random string for this
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://unclejoesgolf.com

# ===========================================
# DEVELOPMENT MODE
# ===========================================
# Set to 'production' for production builds
NODE_ENV=production

# ===========================================
# OPTIONAL: SOCIAL MEDIA
# ===========================================
# Twitter/X
NEXT_PUBLIC_TWITTER_HANDLE=@UncleJoesGolf

# Facebook
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id

# Instagram
NEXT_PUBLIC_INSTAGRAM_HANDLE=@unclejoesgolf

# ===========================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# ===========================================
# YouTube API (for video embeds)
YOUTUBE_API_KEY=your_youtube_api_key

# Mailchimp (alternative to Resend)
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_AUDIENCE_ID=your_mailchimp_audience_id

# ===========================================
# OPTIONAL: CDN & MEDIA
# ===========================================
# Cloudinary (for image optimization)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# ===========================================
# OPTIONAL: MONITORING & LOGGING
# ===========================================
# LogRocket (for session replay)
NEXT_PUBLIC_LOGROCKET_APP_ID=your_logrocket_app_id

# Hotjar (for heatmaps)
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# ===========================================
# OPTIONAL: PAYMENT PROCESSING
# ===========================================
# PayPal (alternative to Stripe)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ===========================================
# SETUP INSTRUCTIONS
# ===========================================
# 1. Supabase: Create project at supabase.com, run schema.sql
# 2. Auth0: Create application at auth0.com, configure callbacks
# 3. Stripe: Create account at stripe.com, set up products/prices
# 4. Resend: Create account at resend.com for email delivery
# 5. Google Analytics: Set up GA4 property
# 6. Sentry: Create project at sentry.io
# 7. Domain: Point domain to Vercel/Netlify hosting
# 8. SSL: Automatic with modern hosting platforms
