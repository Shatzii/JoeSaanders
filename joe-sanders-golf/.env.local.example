# Supabase (Production Database)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Auth0 Authentication
AUTH0_SECRET=your_auth0_secret_here
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com
AUTH0_BASE_URL=http://localhost:3000
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_CLIENT_SECRET=your_auth0_client_secret_here

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key_here
CONTACT_EMAIL=joe@unclejoesgolf.com

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://unclejoesgolf.com
NODE_ENV=production

# Monitoring & Analytics
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Security
# Generate a random secret for NextAuth.js
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://unclejoesgolf.com

# Optional: Mailchimp (for newsletter if not using Supabase)
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_LIST_ID=your_mailchimp_list_id

# Optional: Decap CMS (for content management)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Logging Configuration
LOG_LEVEL=info

# Performance Monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=true
